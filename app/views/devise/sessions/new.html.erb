<%= render  "shared/header" %>
<h2 class="text-center">ログイン</h2>
<%= form_with model:@user, url: user_session_path, local: true do |f| %>
  <div class="text-center">
    <%= render "devise/shared/error_messages", model: f.object %>
      <div>
        <label>メールアドレス</label>
      </div>
      <%= f.email_field :email, class:"w-50 m-1", id:"email", autofocus: true %>
      <div>
        <label>パスワード</label>
      </div>
      <%= f.password_field :password, class:"w-50 m-1", id:"password", autofocus: true %>
      <div>
      <%= f.submit "ログイン" ,class:"btn btn-outline-primary m-1" %>
  </div>
<% end %>

<%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "" %>
<%= render  "shared/footer" %>