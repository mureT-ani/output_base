<%= render  "shared/header" %>
<h1>アウトプット編集</h1>
<%= form_with model: @post, local: true do |f| %>
  <%= render  "shared/error_messages", model: f.object %>
  <%= f.label :title, "タイトル", class:"m-1 d-block" %>
  <%= f.text_area :title, class:"w-50" %>
  <%= f.label :post_text, "本文", class:"m-1 d-block" %>
  <%= f.rich_text_area :post_text %>
  <%= f.submit "編集" ,class:"btn btn-outline-dark m-1" %>
<% end %>

<%= render  "shared/footer" %>